{
	"name": "Semantics Extension",
	"version": "0.1",
	"description": "Uses semantic analysis to show you how positive or negative your messages are as you type",
	"icons": {
	
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"permissions": ["storage", "activeTab"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
	"content_scripts": [
		{
			"matches": ["http://www.facebook.com/*"],
			"js": ["contentscript.js"]
		}
	],
	"manifest_version": 2
}